version: "3"
services:
  ntg-db-server:
    image: scdh/intf-cbgm-db-server
    expose:
      - 5432
    ports:
      - 5432:5432
    volumes:
      - pgdata:/var/lib/postgresql
    environment:
      POSTGRES_PASSWORD: topsecret
      DEBUG: "true"
      DEBUG_LEVEL: 3

  ntg-app-server:
    image: scdh/intf-cbgm-app-server
    expose:
      - 5000
    ports:
      - 5000:5000
    depends_on:
      - ntg-db-server

volumes:
  pgdata:
